@article{FranchiEmittancesharingexchange2007,
  title = {Emittance Sharing and Exchange Driven by Linear Betatron Coupling in Circular Accelerators},
  author = {Franchi, A. and Métral, E. and Tomás, R.},
  date = {2007-06-21},
  journaltitle = {Physical Review Special Topics - Accelerators and Beams},
  shortjournal = {Phys. Rev. ST Accel. Beams},
  volume = {10},
  pages = {064003},
